@model IEnumerable<ShoppingList.Models.ListShopping>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="btn btn-default">
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.id })
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.shoppingListId }) |            
            @Html.ActionLink("Details", "Details", new { id=item.shoppingListId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.shoppingListId }) |
            <a href="@Url.Action("Index", "ListShoppingItem" ,new { id = item.shoppingListId } )"><span>Go To List</span></a>
        </td>
    </tr>
}

</table>
